<h1>Create a review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating %>
  </div>

  <div class="form-actions">
     <%= f.submit "add a review", class: "btn btn-primary" %>
  </div>
<% end %>
